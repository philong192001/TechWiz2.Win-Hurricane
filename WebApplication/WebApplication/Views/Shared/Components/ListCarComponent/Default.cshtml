@model IEnumerable<Car>
<div class="swiper swiper--offers-economic">
    <div class="swiper-container">

        <div class="swiper-wrapper">
            <!-- Slides -->
            @foreach (var item in Model)
            {
                <div class="swiper-slide">
                    <div class="thumbnail no-border no-padding thumbnail-car-card">
                        <div class="media">
                            <a class="media-link" data-gal="prettyPhoto" href="assets/img/preview/cars/@item.Image">
                                <img src="assets/img/preview/cars/car-370x220x1.jpg" alt="" />
                                <span class="icon-view"><strong><i class="fa fa-eye"></i></strong></span>
                            </a>
                        </div>
                        <div class="caption text-center">
                            <h4 class="caption-title"><a href="#">@item.Name</a></h4>
                            <div class="caption-text">@item.Type</div>
                            <div class="buttons">
                                <a class="btn btn-theme ripple-effect" href="#">View</a>
                            </div>

                        </div>
                    </div>
                </div>
            }


        </div>

    </div>

    <!-- If we need navigation buttons -->
    <div class="swiper-button-next"><i class="fa fa-angle-right"></i></div>
    <div class="swiper-button-prev"><i class="fa fa-angle-left"></i></div>

</div>

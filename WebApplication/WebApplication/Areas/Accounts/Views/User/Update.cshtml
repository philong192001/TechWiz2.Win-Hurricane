@{
    Layout = "~/Areas/Accounts/Views/Shared/_LayoutAdmin.cshtml";
}
@model WebApplication.Models.Users
<div class="container" style="margin-left:5px;">
    <form asp-action="Update" method="post">
        <input type="hidden" value="@Model.Id" name="Id" />
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">First Name</label>
                <input value="@Model.FirstName" name="FirstName" type="text" class="form-control" placeholder="Enter First Name">
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4">Last Name</label>
                <input value="@Model.LastName" name="LastName" type="text" class="form-control" placeholder="Enter Last Name">
            </div>
        </div>
        <div class="form-group">
            <label for="inputAddress">User Name</label>
            <input value="@Model.UserName" name="UserName" type="text" class="form-control" placeholder="Enter User Name">
        </div>
        <div class="form-group">
            <label for="inputAddress2">Email</label>
            <input value="@Model.Email" name="Email" type="email" class="form-control" placeholder="Enter Email">
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputCity">Phone</label>
                <input value="@Model.Phone" name="Phone" type="text" class="form-control" placeholder="Enter Phone">
            </div>

            <div class="form-group col-md-4">
                <label for="inputCity">Pass word</label>
                <input value="@Model.Password" name="Password" type="password" class="form-control" placeholder="Enter Password">
            </div>

            <div class="form-group col-md-2">
                <label for="inputZip">Id Proof</label>
                <input value="@Model.IdPoof" name="IdPoof" type="text" class="form-control" placeholder="Enter ID Poof">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>

